# Top-level makefile for RCS admin utility

THIS	= vcs

@make_include_left@@TD_LIB_rules@/td_lib.mk@make_include_right@

BUILD_LIB	= $(TD_LIB)

####### (Development) ##########################################################
top	= ../..

B	= $(top)/bin

####### (Standard Lists) #######################################################
THIS	= vcs
ALL	=\
	$B/$(THIS)

####### (Standard Productions) #################################################
all\
check::		$(LIB_DEPS) bin

all\
clean\
distclean\
check\
lint.out::
	cd src &&	$(MAKE) $(MAKE_OPTS) $@
	cd test &&	$(MAKE) $(MAKE_OPTS) $@

clean\
distclean::			; -$(RM) $(CLEAN)
distclean::			; -$(RM) -r bin
distclean::			; -$(RM) */makefile

install:	all $(ALL)
uninstall:			; -$(RM) $(ALL)

####### (Details of Productions) ###############################################
bin:				; mkdir $@
$B/$(THIS):	bin/$(THIS)	; $(INSTALL_PROGRAM) $? $@
