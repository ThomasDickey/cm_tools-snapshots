# Top-level makefile for RCS baseline utility

THIS	= baseline

@make_include_left@@TD_LIB_rules@/td_lib.mk@make_include_right@

####### (Development) ##########################################################
top	= ../..

B	= $(top)/bin

####### (Standard Lists) #######################################################
THIS	= baseline
ALL	=\
	$B/$(THIS)
MFILES	=\
	src/makefile.in\
	test/makefile.in

####### (Standard Productions) #################################################
all\
run_test::	$(LIB_DEPS) bin

all\
clean\
distclean\
sources\
run_test\
lint.out::	$(MFILES)
	cd src &&	$(MAKE) $(MAKE_OPTS) $@
	cd test &&	$(MAKE) $(MAKE_OPTS) $@

clean\
distclean::			; -$(RM) $(CLEAN)
distclean::			; -$(RM) -r bin
distclean::			; -$(RM) */makefile

install:	all $(ALL)
deinstall:			; -$(RM) $(ALL)

####### (Details of Productions) ###############################################
bin:				; mkdir $@
$B/$(THIS):	bin/$(THIS)	; $(INSTALL_PROGRAM) $? $@
