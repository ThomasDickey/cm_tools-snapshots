# Make-file for RCS baseline utility

####### (Environment) ##########################################################
SHELL		= /bin/sh
top_srcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@
@SET_MAKE@

THIS	= baseline

@make_include_left@@TD_LIB_rules@/td_lib.mk@make_include_right@

BUILD_INC	= $(TD_INC)
BUILD_LIB	= $(TD_LIB)

CC		= @CC@
CFLAGS		= @CFLAGS@
EXTRA_CFLAGS	= @EXTRA_CFLAGS@

####### (Standard Lists) #######################################################
B	= ../bin
ALL	= $B/$(THIS)
CSRC	= $(THIS).c
SOURCES	= $(CSRC)

####### (Standard Productions) #################################################
all\
install:	$(SOURCES) $(ALL)

clean:				; -$(RM) $(CLEAN)
distclean:	clean		; -$(RM) $(ALL)
check:

####### (Details of Productions) ###############################################
$B/$(THIS):	$(THIS).o $(LIB_DEPS)	; $(LINK) -o $@ $(THIS).o $(LIB_ARGS)

$(THIS).o:	$(RCSDEFS_H)

####### (Development) ##########################################################
lint.out:	$(CSRC)		; $(DATE); tdlint $(LINTOPTS) $? >>$@
